<h3>Signin</h3>
<form {{action 'signin' on='submit'}}>
  <div>
    <label>
      Username
      {{input value=username placeholder='Username'}}
    </label>
  </div>
  <div>
    <label>
      Password
      {{input type='password' value=password placeholder='Password'}}
    </label>
  </div>
  <button type='submit'>Signin</button>
</form>
{{outlet}}
